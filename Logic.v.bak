module Logic#(parameter Width = 16)(
input [Width-1:0] A,B,
input [1:0] F,
output reg Z,N,P,
output reg [Width-1:0] Out
);

always@(*) begin
    case(F)
        2'b00: Out = A & B;
        2'b01: Out = A | B;
        2'b10: Out = A ^ B;
        2'b11: Out = ~A;
        default: Out = {Width{1'b0}};
    endcase

    Z = ~|Out;
    N = Out[Width-1];
    P = ~^Out;
end

endmodule

